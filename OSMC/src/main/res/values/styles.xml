<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="AppTheme.MapView" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#80000000</item>
    </style>

    <style name="Overflow" parent="@android:style/Widget.ActionButton.Overflow"></style>

    <style name="NormalText">
        <item name="android:textSize">8pt</item>
    </style>
    <style name="SmallText" parent="@style/NormalText">
        <item name="android:textSize">6pt</item>
    </style>
    <style name="LargeText" parent="@style/NormalText">
        <item name="android:textSize">10pt</item>
    </style>
    <style name="HugeText" parent="@style/NormalText">
        <item name="android:textSize">12pt</item>
    </style>
    <style name="AppThemeCustom">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
